<h1>文章列表</h1>

<%= link_to "新增文章", new_article_path %>
<ul>
<% @articles.each do |article|%>
    <li>
        <%= link_to article.title, article_path(article.id)%>
        <%= link_to "編輯", edit_article_path(article) %>
        <%= link_to "刪除", article_path(article.id), 
                                data: { 
                                turbo_method: 'delete',
                                turbo_confirm: '確定要刪除嗎？'
                                } %>
    </li>
<% end %>
</ul>