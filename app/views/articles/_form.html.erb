<%= form_with(model: model, data:{ turbo: false }) do |f|  %>
    <section class="flex flex-col gap-4">
        <div>
            <%= f.label :title, '標題：'%> 
            <%= f.text_field :title%> 
        </div>
        <div>
            <%= f.label :subtitle, '副標題：'%> 
            <%= f.text_field :subtitle%> 
        </div>
        <div>
            <%= f.label :content, '內文：'%> 
            <%= f.text_area :content%> 
        </div>
        <div>
            <%= f.label :password, '上鎖：'%> 
            <%= f.password_field :password%> 
        </div>
        <div>
            <%= f.label :category, '文章分類：'%> 
            <%= f.select :category, 
                Article.categories.map{|k, v| [k.to_s, k.to_s]}%> 
        </div>
        <div>
            <%= f.submit class: 'action-btn'%>
        </div>
    </section>
<% end %>
