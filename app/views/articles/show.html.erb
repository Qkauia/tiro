<h1><%= @article.title%></h1>


<article>
    <p><%= @article.content %></p>
</article>
<hr>


<h2>留言版<%= Time.now%></h2>

<%= form_with( model: [ @article, @comment] )do |f| %>

    <div>
    <%= f.label :content, "留言" %>
    <%= f.text_area :content %>
    </div>
    <br>
    <div><%= f.submit "新增留言"%></div>

<% end %>

<hr>
<ul id="comment_list">
    <% @comments.each do |comment|%>
        <%= render 'comment', comment: comment%>
    <% end %>
</ul>
<hr>
