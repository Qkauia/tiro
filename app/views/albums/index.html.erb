<h1 class="h1-type">相簿</h1>

<%= link_to '新增相簿', new_album_path %>

<ul class="grid grid-cols-4 gap-4" data-controller="sort">
    <% @albums.each do |album| %>
        <li class="col-span-1" data-id="<%= album.id %>">
            <div class="border border-slate-400">
                <picture>
                    <%= link_to album do%>
                    <img src="https://fakeimg.pl/320x200/?text=<%= (1..10).to_a.sample %>">
                    <% end %>
                </picture>
                <footer class="px-2 py-1 font-semibold flex justify-between">
                    <span><%= link_to album.name, album%></span>
                    <% if album.password.present?%>
                        <span>∆</span>
                    <%end%>
                </footer>
            </div>
        </li>
    <% end %>
</ul>